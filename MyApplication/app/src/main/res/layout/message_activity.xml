<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.moulik.myapplication.PublishMessageActivity">

    <LinearLayout
        android:id="@+id/carLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/car1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C1"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/car2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C2"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/car3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C3"
            android:layout_weight="1" />

        <Button
            android:id="@+id/car4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C4"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/car5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="C5"
            android:layout_weight="1"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/carLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/SL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Speed Limit 1" />

            <Button
                android:id="@+id/SL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Speed Limit 2" />

            <Button
                android:id="@+id/SL3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Speed Limit 3" />

            <Button
                android:id="@+id/SL4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Speed Limit 4" />

            <Button
                android:id="@+id/reverseBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:text="Reverse" />

            <RadioGroup
                android:id="@+id/radioGroupForReverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/zero_reverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="zero"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/one_reverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="one"
                    android:textSize="15dp" />
            </RadioGroup>

            <Button
                android:id="@+id/switchBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Switch" />

            <RadioGroup
                android:id="@+id/radioGroupForSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/zero_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="zero"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/one_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="one"
                    android:textSize="15dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/messageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>